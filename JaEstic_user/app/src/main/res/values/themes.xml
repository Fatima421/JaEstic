<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JaEstic_user" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greyBlue</item>
        <item name="colorSecondaryVariant">@color/greyBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Nav Bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.JaEstic_user">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>