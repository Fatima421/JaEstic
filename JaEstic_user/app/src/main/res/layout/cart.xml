<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/cellCart"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_border_cell_transparent" />

    <CheckBox
        android:id="@+id/cmdCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cellCart"
        app:layout_constraintEnd_toEndOf="@+id/cellCart"
        app:layout_constraintTop_toTopOf="@+id/cellCart" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cmdItemImage"
        android:layout_width="131dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/cellCart"
        app:layout_constraintStart_toStartOf="@+id/cellCart"
        app:layout_constraintTop_toTopOf="@+id/cellCart"
        app:shapeAppearanceOverlay="@style/rounded_corner"
        app:srcCompat="@drawable/junk_food" />

    <TextView
        android:id="@+id/cmdItemPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/helvetica_rounded"
        android:text="TextView"
        android:textColor="@color/greyBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/cmdCheckBox"
        app:layout_constraintStart_toEndOf="@+id/cmdItemImage"
        app:layout_constraintTop_toBottomOf="@+id/cmdItemName" />

        <TextView
            android:id="@+id/cmdItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/helvetica_rounded"
            android:text="TextView"
            android:textColor="@color/greyBlue"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/cmdItemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cmdItemQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/helvetica_rounded"
            android:text="TextView"
            android:textColor="@color/greyBlue"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cmdItemPrice" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>